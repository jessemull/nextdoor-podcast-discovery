# Web Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase: use dev project URL/keys for local dev; use prod project in Vercel Production.
# See docs/DEPLOYMENT.md for dev vs prod setup.
# Supabase (public - safe for client)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...your-anon-key...

# Supabase (server-side - keep secret)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJ...your-service-key...

# Auth0 (get from Auth0 Dashboard → Applications → your app)
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_SECRET=generate-a-random-secret-for-session-encryption
# Set to false in production (e.g. Vercel) to avoid chunked session cookies and random logouts
AUTH0_SESSION_STORE_ID_TOKEN=false
# Use one canonical URL everywhere (e.g. always localhost:3000 or always 127.0.0.1:3000). In production, set to the exact origin users see (e.g. https://yourdomain.com). Auth0 callback/logout URLs must match.
APP_BASE_URL=http://localhost:3000

# Auth0 cookies (optional; defaults work for most cases). Set explicitly for Brave/mobile or strict browsers.
# AUTH0_COOKIE_SAME_SITE=Lax
# AUTH0_COOKIE_SECURE=true
# AUTH0_COOKIE_PATH=/

# Claude API (sports fact on home page)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API (for semantic search embeddings)
OPENAI_API_KEY=sk-...

# Upstash Redis (optional - shared caching; omit for in-memory fallback)
# UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
# UPSTASH_REDIS_REST_TOKEN=AXXXX...
