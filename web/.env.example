# Nextdoor Web Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase (public - safe for client)

NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# Supabase (server-side only)

SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# NextAuth.js

NEXTAUTH_SECRET=generate-a-random-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (create at https://console.cloud.google.com/apis/credentials)

GOOGLE_CLIENT_ID=...
GOOGLE_CLIENT_SECRET=...

# Allowed users (email whitelist)

ALLOWED_EMAIL_1=your-email@example.com
MATT_EMAIL=matt@example.com

# Matt's email for client-side sports fact check

NEXT_PUBLIC_MATT_EMAIL=matt@example.com

